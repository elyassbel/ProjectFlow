{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ user.userProfile.lastName }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ user.userProfile.firstName }}</td>
            </tr>
            <tr>
                <th>Avatar</th>
                <td><img src="{{ asset('/images/upload/users/'~user.userProfile.avatarName)|imagine_filter('image120x120') }}" alt="{{ user.userProfile.avatarName }}"/></td>
            </tr>
            <tr>
                <th>Enabled</th>
                <td>{{ user.enabled ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>AverageDailyRate</th>
                <td>{{ user.userProfile.averageDailyRate }}{{ user.userProfile.currency }}/d</td>
            </tr>
            <tr>
                <th>Locale</th>
                <td>{{ user.userProfile.locale }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ user.userProfile.createdAt ? user.userProfile.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Verified</th>
                <td>{{ user.verified ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>VerificationEmailSentAt</th>
                <td>{{ user.verificationEmailSentAt ? user.verificationEmailSentAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_user') }}">back to list</a>

    <a href="{{ path('app_admin_user_edit', {'id': user.id}) }}">edit</a>

    {{ include('admin/user/_delete_form.html.twig') }}
{% endblock %}
