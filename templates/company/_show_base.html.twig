{% extends 'base.html.twig' %}

{% block page_title %}{{ company.name }} / {% block page_subtitle %}{{ 'company.show.title'|trans }}{% endblock %}{% endblock %}

{% block page_content %}
    <div class="row">
        <div class="col-12 col-md-4">
            <div class="card">
                <img class="card-img-top" src="https://loremflickr.com/640/180" alt="Lorem">
                <div class="card-header">
                    <h5 class="card-title mb-0">{{ company.name }}</h5>
                </div>
                <div class="card-body">
                    <table class="table table-striped table-sm">
                        <tbody>
                            <tr>
                                <td><i class="m-1" data-feather="map-pin"></i> {{ company.address.lightAddress }}</td>
                            </tr>
                            <tr>
                                <td><i class="m-1" data-feather="globe"></i> {{ company.address.countryFull }}</td>
                            </tr>
                            {% if company.website %}
                                <tr>
                                    <td><i class="m-1" data-feather="link"></i> <a href="{{ company.website }}" target="_blank">{{ company.website }}</a></td>
                                </tr>
                            {% endif %}
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">{{ 'company.show.main_contact'|trans }}</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">
                        <strong>{{ mainContact }}</strong>
                        <br>
                        {{ mainContact.email }}
                        <br>
                        {{ mainContact.phone1 }}
                    </p>
                    <a href="{{ path('app_company_show_contacts', {'id': company.id}) }}" class="card-link">{{ 'company.show.see_all_contacts'|trans }}</a>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-8">
            <ul class="nav nav-pills mb-4" role="tablist">
                <li class="nav-item" role="presentation">
                    <a class="nav-link {{ app.current_route == 'app_company_show' ? 'active' }}" href="{{ path('app_company_show', {'id': company.id}) }}" aria-selected="true" role="tab">{{ 'company.show.nav.company'|trans }}</a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link {{ app.current_route == 'app_company_show_contacts' ? 'active' }}" href="{{ path('app_company_show_contacts', {'id': company.id}) }}" role="tab">{{ 'company.show.nav.contacts'|trans }}</a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link {{ app.current_route == 'app_company_show_invoices' ? 'active' }}" href="{{ path('app_company_show_invoices', {'id': company.id}) }}" role="tab">{{ 'company.show.nav.invoices'|trans }}</a>
                </li>
            </ul>

            <div class="card">
                <div class="card-body">
                    <div class="tab-content">
                        {% block page_show_content %}{% endblock %}
                    </div>
                </div>
            </div>

        </div>
    </div>
{% endblock %}
